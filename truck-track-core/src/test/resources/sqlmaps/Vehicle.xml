<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="projectMap">

	<resultMap id="projectResultMap" class="com.trucktrack.core.test.module.vehicle.model.Vehicle">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>

	<select id="getAllProjects" resultMap="projectResultMap">
		SELECT p.id, p.name
		FROM project p
	</select>

	<select id="getProjectById" resultMap="projectResultMap">
		SELECT p.id, p.name
		FROM project p
		WHERE id = #id#
	</select>

	<insert id="insertProject">
		INSERT INTO project (name) values (#name#)
		<selectKey resultClass="Long" keyProperty="id">
			SELECT LAST_INSERT_ID() as id
		</selectKey>
	</insert>

	<update id="updateProject">
		UPDATE project
		SET name = #name#
		WHERE id = #id#
	</update>

	<delete id="deleteProject">
		DELETE FROM project 
		WHERE id = #id#
	</delete>
	
</sqlMap>